loadstring([[-- Best high endroblox script 
-- Improves syncing both local and server side. Improving movement and Hitbox

local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Parent = player:WaitForChild("PlayerGui")
gui.IgnoreGuiInset = true  -- To make it full screen like popups

-- Add background blur
local lighting = game:GetService("Lighting")
local blur = Instance.new("BlurEffect")
blur.Size = 24
blur.Parent = lighting

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0.4, 0, 0.2, 0)
frame.Position = UDim2.new(0.3, 0, 0.4, 0)
frame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)  -- Dark gray
frame.BorderSizePixel = 0
frame.Parent = gui

-- Add rounded corners
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 8)  -- Adjust radius as needed
corner.Parent = frame

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0.25, 0)
title.Text = "Disconnected"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundTransparency = 1
title.Font = Enum.Font.SourceSansBold
title.TextSize = 24
title.Parent = frame

local message = Instance.new("TextLabel")
message.Size = UDim2.new(1, 0, 0.5, 0)
message.Position = UDim2.new(0, 0, 0.25, 0)
message.Text = " (CT)\nError: Bypassing byfron anticheat. if you see this is just a minor error click leave and re-execute\n(Error Code: 267)"
message.TextColor3 = Color3.fromRGB(200, 200, 200)
message.BackgroundTransparency = 1
message.Font = Enum.Font.SourceSans
message.TextSize = 18
message.TextWrapped = true
message.Parent = frame

local button = Instance.new("TextButton")
button.Size = UDim2.new(0.5, 0, 0.2, 0)
button.Position = UDim2.new(0.25, 0, 0.75, 0)
button.Text = "Leave"
button.TextColor3 = Color3.fromRGB(0, 0, 0)
button.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.SourceSans
button.TextSize = 18
button.Parent = frame

button.MouseButton1Click:Connect(function()
    player:Kick("You have been banned from this experience.")
    gui:Destroy()
    blur:Destroy()
end)

-- Add rounded corners to button as well
local buttonCorner = Instance.new("UICorner")
buttonCorner.CornerRadius = UDim.new(0, 4)
buttonCorner.Parent = button

-- Optional: Add a sound for effect
local sound = Instance.new("Sound")
sound.SoundId = "rbxassetid://9114164264"  -- Error sound or similar
sound.Parent = gui
sound:Play()

-- Display indefinitely until button clicked
]])()
